<Container>
  <div class="text-center max-w-3xl mx-auto space-y-4">
    <Title>Our Team</Title>
    <Paragraph>Driving force behind our ConnectVerse</Paragraph>
  </div>

  <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2 gap-6 pt-8 md:pt-12 lg:pt-16">
    {teamMembers.map((member) => (
      <div class="text-center team-member p-4">
        <div class="rounded-full bg-gradient-to-br from-blue-100 to-purple-100 w-20 h-20 flex items-center justify-center mx-auto mb-3 overflow-hidden border-2 border-white shadow-md">
          <img 
            src={member.image} 
            alt={member.name}
            width="80"
            height="80"
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
        <h3 class="text-base font-medium text-gray-500">{member.name}</h3>
        <p class="text-xs text-gray-500 mt-1">{member.role}</p>
        
        <div class="flex justify-center space-x-2 mt-3">
          {(Object.keys(member.socials) as SocialPlatform[]).map((platform) => (
            member.socials[platform] && (
              <a 
                href={member.socials[platform]} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-blue-500 transition-colors p-1"
                aria-label={`${member.name}'s ${platform}`}
              >
                <svg 
                  viewBox="0 0 24 24" 
                  width="16" 
                  height="16" 
                  class="fill-current"
                >
                  <path d={socialIcons[platform]} />
                </svg>
              </a>
            )
          ))}
        </div>
      </div>
    ))}
  </div>
</Container>

<style is:global>
  .team-member {
    transition: all 0.2s ease;
  }
  .team-member:hover {
    transform: translateY(-3px);
  }
</style>