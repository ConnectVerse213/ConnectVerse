                        <input type="hidden" name="u" value="0a9b0d2f76fd7e8999d76e7ff">
                        <input type="hidden" name="id" value="9daf126415">
                        <input type="hidden" name="f_id" value="009041e5f0">

                        <!-- Email icon -->
                        <span class="min-w-max pr-2 border-r border-box-border">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 9v.906a2.25 2.25 0 01-1.183 1.981l-6.478 3.488M2.25 9v.906a2.25 2.25 0 001.183 1.981l6.478 3.488m8.839 2.51l-4.66-2.51m0 0l-1.023-.55a2.25 2.25 0 00-2.134 0l-1.022.55m0 0l-4.661 2.51m16.5 1.615a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V8.844a2.25 2.25 0 011.183-1.98l7.5-4.04a2.25 2.25 0 012.134 0l7.5 4.04a2.25 2.25 0 011.183 1.98V19.5z" />
                            </svg>
                        </span>

                        <!-- Email Input -->
                        <input type="email" name="EMAIL" id="mce-EMAIL" placeholder="events.connectverse@gmail.com" class="w-full py-3 outline-none bg-transparent" required aria-label="Email address">

                        <!-- Anti-spam field (required by Mailchimp) -->
                        <div style="position: absolute; left: -5000px;" aria-hidden="true">
                            <input type="text" name="b_0a9b0d2f76fd7e8999d76e7ff_9daf126415" tabindex="-1" value="">
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" name="subscribe" id="mc-embedded-subscribe" class="min-w-max text-white bg-primary rounded-full px-4 py-3 hover:bg-primary-dark transition-colors">
                            <span class="hidden sm:block">Subscribe</span>
                            <span class="block sm:hidden">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
                            </svg>
                            </span>
                        </button>
                    </form>

                    <!-- Mailchimp script (loads only in browser) -->
                    <script is:inline>
                    document.addEventListener('DOMContentLoaded', () => {
                    // Load Mailchimp validation script
                    const script = document.createElement('script');
                    script.src = '//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js';
                    document.body.appendChild(script);
                    
                    // Initialize fields configuration
                    window.fnames = ['EMAIL'];
                    window.ftypes = ['email'];
                    });
                    document.getElementById('mc-embedded-subscribe-form').addEventListener('submit', function(e) {
                    // Show success popup
                    document.getElementById('success-popup').classList.remove('hidden');
                    
                    // Optional: Hide after 3 seconds
                    setTimeout(() => {
                        document.getElementById('success-popup').classList.add('hidden');
                    }, 3000);
                    });
                    </script>

                    <style>
                    /* Response messages styling */
                    #mce-responses {
                        margin-top: 1rem;
                    }
                    #mce-error-response {
                        color: #e53e3e;
                    }
                    #mce-success-response {
                        color: #38a169;
                    }
                    </style>
