---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";
---

<Container>
  <div class="text-center max-w-3xl mx-auto space-y-4">
    <Title>What People Say</Title>
    <Paragraph>Feedback from students, professors, and partners</Paragraph>
  </div>
  <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {[
      {
        name: "Suresh Choudhary",
        role: "Co-Founder, Router Protocol",
        content: "Appeciating the team of ConnectVerse for their support to host an event in a week.",
        rating: 5
      },
      {
        name: "Mohammed Azharuddin",
        role: "CEO, Qoneqt",
        content: "ConnectVerse has helped us to reach 5000+ people in a single quarter.",
        rating: 5
      },
      {
        name: "Danish",
        role: "Community Manager, BharatBox",
        content: "Your creative ideas and consistent efforts will get a success one day.",
        rating: 5
      }
    ].map(testimonial => (
      <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <div class="flex items-center mb-4">
          {[...Array(5)].map((_, i) => (
            <svg
              class={`w-5 h-5 ${i < testimonial.rating ? 'text-yellow-400' : 'text-gray-300'}`}
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>
        <p class="text-gray-600 mb-4">"{testimonial.content}"</p>
        <div class="flex items-center">
          <div class="bg-gray-200 rounded-full w-10 h-10 flex items-center justify-center text-gray-600 font-medium">
            {testimonial.name.split(' ').map(n => n[0]).join('')}
          </div>
          <div class="ml-3">
            <p class="font-medium text-gray-900">{testimonial.name}</p>
            <p class="text-sm text-gray-500">{testimonial.role}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</Container>