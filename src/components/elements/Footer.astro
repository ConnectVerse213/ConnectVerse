import { Image } from 'astro:assets';
import ConnectVerse_logo from "/public/assets/images/connectverse-corp/logo/logo.png";

const footerNav1 = [
    {
        itemText:"Community Engagement",
        itemLink:"#features"
    },
    {
        itemText:"Ambassador Programme",
        itemLink:"#features"
    },
    {
        itemText:"IRL Events",
        itemLink:"#features"
    }
]

const footerSupport = [
    {
        itemText:"Book a Call",
        itemLink:"https://calendly.com/quantumworld394/30min"
    },
    {
        itemText:"FAQ",
        itemLink:"#faq"
    },
    {
        itemText:"Contact",
        itemLink:"mailto:events.connectverse@gmail.com"
    }
]

const footerCompany = [
    {
        itemText:"About",
        itemLink:"https://linktr.ee/connectverseweb3"
    },
    {
        itemText:"0xGrow",
        itemLink:"https://0xgrow.xyz"
    },
    {
        itemText:"0xAcademy",
        itemLink:"https://0xacademy.xyz"
    },
    {
        itemText:"Genshot",
        itemLink:"https://genshot.vercel.app"
    },
    {
        itemText:"FanFi",
        itemLink:"https://fanfi.space"
