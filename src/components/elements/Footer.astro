            <GroupFooterNav>
                <FooterNav title={"Company"} navItems={footerCompany}/>
                <FooterNav title={"Services"} navItems={footerNav1}/>
            </GroupFooterNav>

            <GroupFooterNav>
                <FooterNav title={"Support"} navItems={footerSupport}/>
                <FooterNav title={"Meet our Founders"} navItems={footerFounders}/>
            </GroupFooterNav>

        </div>
    </Container>
    <div class=" bg-gradient-to-tl from-box-bg py-2 relative">
        <Container>
            <div class="flex justify-between items-center gap-6 md:text-sm text-heading-3">
                <div>
                    &copy; <span id="year"></span> ConnectVerse Corp. All right reserved
                </div>
                <div>
                    Crafted with ❤️ by <a href="https://github.com/kanduru-abhiram" target="_blank" class="font-semibold">Abhiram K</a>
